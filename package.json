{
  "name": "polish-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "bun run --filter @polish/app dev",
    "build": "bun run --filter @polish/app build",
    "start": "bun run --filter @polish/app start",
    "lint": "bun run --filter @polish/app lint",
    "test": "bun run --filter @polish/app test",
    "test:watch": "bun run --filter @polish/app test:watch",
    "test:coverage": "bun run --filter @polish/app test:coverage",
    "website:dev": "bun run --filter @polish/website dev",
    "website:build": "bun run --filter @polish/website build"
  }
}
